<%- include('includes/header') %> <%- include("includes/flash") %>

<div class="container py-md-5 container--narrow">
  <a class="small font-weight-bold" href="/profile/<%= user.username %>">&laquo; Back to List</a>
  <h2 class="mt-3">Add Car</h2>
  <form class="mt-4" action="/create-item" method="POST">
    <div class="form-group">
      <label for="post-title" class="text-muted mb-1"><small>Description (Example: <%= new Date().getFullYear() %> Jeep Wrangler)</small></label>
      <input required name="description" id="item-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="post-cost" class="text-muted mb-1"><small>Cost</small></label>
      <input required name="cost" id="item-cost" class="form-control form-control-lg form-control-title" type="number" min="0" max="500000" step="any" placeholder="" autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="post-miles" class="text-muted mb-1"><small>Miles</small></label>
      <input required name="miles" id="item-miles" class="form-control form-control-lg form-control-title" type="number" min="0" max="500000" step="any" placeholder="" autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="post-link" class="text-muted mb-1"><small>Link (Paste URL here or leave blank)</small></label>
      <input name="link" id="item-link" class="small form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off" />
    </div>

    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

    <button class="btn btn-primary">Save Car</button>
  </form>
</div>

<%- include('includes/footer') %>

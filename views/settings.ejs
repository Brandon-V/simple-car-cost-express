<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">

  <%- include("includes/flash") %>

  <a class="small font-weight-bold" href="">&laquo; Back to List</a>
  
  <form class="mt-3" action="#" method="POST">
    <div class="form-group">
      <label for="item-useful-miles" class="text-muted mb-1"><small>Assumed Useful Life in Miles</small></label>
      <input required name="description" value="" id="item-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="item-monthly-miles" class="text-muted mb-1"><small>Assumed Miles Driven Per Month</small></label>
      <input name="link" value="" id="item-link" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off" />
    </div>

    <!-- protects against csrf attack -->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >

    <button class="btn btn-primary">Save Updates</button>
  </form>
</div>

<%- include('includes/footer') %>

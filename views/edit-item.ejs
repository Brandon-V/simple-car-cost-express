<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">

  <%- include("includes/flash") %>

  <a class="small font-weight-bold" href="/profile/<%= user.username %>">&laquo; Back to List</a>
  
  <form class="mt-3" action="/item/<%= item._id %>/edit" method="POST">
    <div class="form-group">
      <label for="post-title" class="text-muted mb-1"><small>Description</small></label>
      <input required name="description" value="<%= item.description %>" id="item-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="post-cost" class="text-muted mb-1"><small>Cost</small></label>
      <input required name="cost" value="<%= item.cost %>" id="item-cost" class="form-control form-control-lg form-control-title" type="number" min="0" placeholder="" autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="post-miles" class="text-muted mb-1"><small>Miles</small></label>
      <input required name="miles" value="<%= item.miles %>" id="item-miles" class="form-control form-control-lg form-control-title" type="number" min="0" placeholder="" autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="post-link" class="text-muted mb-1"><small>Link</small></label>
      <input name="link" value="<%= item.link %>" id="item-link" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off" />
    </div>

    <!-- protects against csrf attack -->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >

    <button class="btn btn-primary">Save Updates</button>
  </form>
</div>

<%- include('includes/footer') %>
